<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_25"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/ivNoticeThumbnail"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/tvNoticeCategory"
            app:layout_constraintBottom_toBottomOf="@id/tvNoticeDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/profile_character2"
            />
        <TextView
            android:id="@+id/tvNoticeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_900"
            android:text="공지카테고리"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivNoticeThumbnail"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/tvNoticeNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Caption11218Regular"
            app:layout_constraintTop_toBottomOf="@id/tvNoticeCategory"
            app:layout_constraintStart_toStartOf="@id/tvNoticeCategory"
            android:textColor="@color/gray_400"
            android:text="NickName"
            />
        <ImageView
            android:id="@+id/ivDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvNoticeNickName"
            app:layout_constraintBottom_toBottomOf="@+id/tvNoticeNickName"
            app:layout_constraintStart_toEndOf="@id/tvNoticeNickName"
            app:layout_constraintEnd_toStartOf="@id/tvNoticeDate"
            android:layout_marginHorizontal="7.75dp"
            app:tint="@color/gray_200"
            android:src="@drawable/dot_grey"
            />
        <TextView
            android:id="@+id/tvNoticeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvNoticeCategory"
            app:layout_constraintStart_toEndOf="@id/ivDot"
            android:layout_marginStart="7.75dp"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_400"
            android:text="공지 날짜"
            />
        <ImageView
            android:id="@+id/ivNoticeOptions"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="6dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/icon_outline_more"
            android:visibility="gone"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvNoticeDate,ivNoticeThumbnail"
            app:barrierDirection="bottom"
            />

        <TextView
            android:id="@+id/tvNoticeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            android:layout_marginTop="18dp"
            style="@style/Body21420Regular"
            android:textColor="@color/gray_870"
            android:ellipsize="end"
            android:text="컨텐츠!"
            android:maxLines="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvNoticeContent"
            android:layout_marginTop="22dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="end"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_fill_comment"
                app:tint="@color/state_enable_gray_200"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Caption11218Regular"
                android:textColor="@color/state_active_gray_700"
                android:text="123"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>