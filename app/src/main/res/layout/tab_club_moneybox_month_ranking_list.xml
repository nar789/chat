<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ivRankText"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Buttons1420Medium"
        android:gravity="center"
        android:textColor="@color/primary_500"
        />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivRankText"
        android:layout_marginStart="10dp"
        style="@style/Body21420Regular"
        android:textColor="@color/gray_700"
        android:text="NickName"
        />

    <TextView
        android:id="@+id/tvDonationAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDonationAmountUnit"
        style="@style/Body21420Regular"
        android:layout_marginEnd="4dp"
        android:textColor="@color/gray_870"
        android:text="123"
        />
    <TextView
        android:id="@+id/tvDonationAmountUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Body21420Regular"
        android:textColor="@color/gray_870"
        android:text="@string/en_kdg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>