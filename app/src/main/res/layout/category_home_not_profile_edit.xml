<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_light_gray_50">

    <RelativeLayout
        android:id="@+id/rlEditProfileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="36dp"
        android:paddingEnd="25dp"
        android:background="@drawable/bg_main_profile"
        >
        <TextView
            android:id="@+id/tvProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body21420Regular"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:textColor="@color/state_active_gray_900"
            android:text="@string/se_p_do_profile_write_complete"
            />

        <TextView
            android:id="@+id/tvProfileSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProfileText"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/noto_sans_kr"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:textColor="@color/gray_500"
            android:text="@string/complete_profile_explain_text"
            />

        <TextView
            android:id="@+id/tvCompleteCount"
            style="@style/Caption21116Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvProfileText"
            android:layout_alignBottom="@+id/tvProfileText"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ivArrowHeadRight"
            android:gravity="center"
            android:text="@string/g_count_complete" />

        <ImageView
            android:id="@+id/ivArrowHeadRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvProfileText"
            android:layout_alignBottom="@+id/tvProfileText"
            android:src="@drawable/icon_arrow_head_right" />

        <com.rndeep.fns_fantoo.ui.common.SegmentedProgressBar
            android:id="@+id/segmentProgressProfileEdit"
            style="@style/Widget.App.linearProgressIndicatorStyle"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@+id/tvProfileSubTitle"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="23dp"
            app:cornerRadius="20dp"
            app:dividerColor="@color/gray_25"
            app:dividerWidth="1dp"
            app:divisions="6"
            app:progressBarBackgroundColor="@color/gray_200_opacity60"
            app:progressBarColor="@color/primary_default"
            app:trackCornerRadius="100dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/firstText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Caption11218Regular"
        android:layout_marginStart="38dp"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toBottomOf="@id/rlEditProfileCard"
        app:layout_constraintStart_toStartOf="@id/rlEditProfileCard"
        android:text="@string/se_n_suggest_my_activity_and_favorite"
        />
    <TextView
        android:id="@+id/secText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/Caption11218Regular"
        android:layout_marginStart="38dp"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toBottomOf="@id/firstText"
        app:layout_constraintStart_toStartOf="@id/rlEditProfileCard"
        android:text="@string/se_g_join_interest_club"
        />
    <TextView
        android:id="@+id/thirdText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/Caption11218Regular"
        android:layout_marginStart="38dp"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toBottomOf="@id/secText"
        app:layout_constraintStart_toStartOf="@id/rlEditProfileCard"
        android:text="@string/se_g_save_favorite_interest_community"
        />
    <TextView
        android:id="@+id/ivFourText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/Caption11218Regular"
        android:textColor="@color/gray_600"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toBottomOf="@id/thirdText"
        app:layout_constraintStart_toStartOf="@id/rlEditProfileCard"
        android:text="@string/se_p_do_profile_write_complete"
        />

</androidx.constraintlayout.widget.ConstraintLayout>