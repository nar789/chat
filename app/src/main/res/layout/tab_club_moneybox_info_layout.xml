<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp"
    android:layout_marginBottom="8dp"
    android:background="@color/gray_25"
    >
    <ImageView
        android:id="@+id/ivClubThumbnail"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile_club_character"
        />
    <TextView
        android:id="@+id/tvClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivClubThumbnail"
        app:layout_constraintStart_toEndOf="@id/ivClubThumbnail"
        android:layout_marginStart="12dp"
        style="@style/Body21420Regular"
        android:textColor="@color/gray_900"
        android:text="@string/p_coffer_of_fanclub_with_arg"
        />

    <TextView
        android:id="@+id/clubMoneyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvClubName"
        app:layout_constraintStart_toStartOf="@id/tvClubName"
        style="@style/Title32028Bold"
        android:textColor="@color/gray_900"
        android:text="금고 잔액"
        />
    <TextView
        android:id="@+id/clubMoneyAccountUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvClubName"
        app:layout_constraintStart_toEndOf="@+id/clubMoneyAccount"
        style="@style/Title32028Bold"
        android:textColor="@color/gray_900"
        android:text="@string/en_kdg"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:constraint_referenced_ids="ivClubThumbnail,clubMoneyAccount"
        app:barrierDirection="bottom"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius_8"
        android:backgroundTint="@color/gray_50"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        android:layout_marginTop="24dp"
        android:paddingVertical="1.5dp"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="@id/textGuideLine1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="0dp"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="?attr/selectableItemBackground"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_800"
            android:text="@string/n_sum_giving_ranking"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/textGuideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33333333" />
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            app:layout_constraintStart_toStartOf="@id/textGuideLine1"
            app:layout_constraintEnd_toEndOf="@id/textGuideLine1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray_200"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textGuideLine2"
            app:layout_constraintStart_toStartOf="@id/textGuideLine1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="0dp"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="?attr/selectableItemBackground"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_800"
            android:text="@string/g_do_donation"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/textGuideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66666666"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            app:layout_constraintStart_toStartOf="@id/textGuideLine2"
            app:layout_constraintEnd_toEndOf="@id/textGuideLine2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray_200"
        />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/textGuideLine2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="0dp"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="?attr/selectableItemBackground"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_300"
            android:text="@string/s_shopping"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>