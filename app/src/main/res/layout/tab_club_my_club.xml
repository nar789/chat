<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="22dp"
    android:background="@color/state_enable_gray_25"
    >
    <TextView
        android:id="@+id/tvMyClubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        style="@style/Title41824Medium"
        android:textColor="@color/state_active_gray_900"
        android:text="@string/n_my_club"
        />
    <TextView
        android:id="@+id/tvMyClubShowAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        style="@style/Caption11218Regular"
        android:textColor="@color/gray_700"
        android:text="@string/j_show_all"
        />
    <TextView
        android:id="@+id/tvNoMyClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvMyClubTitle"
        android:gravity="center"
        style="@style/Caption11218Regular"
        android:textColor="@color/gray_500"
        android:layout_margin="20dp"
        android:text="@string/se_g_not_exist_join_club_do_join_to_club"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcMyClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvMyClubTitle"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>