<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_title"
        style="@style/Body21420Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="@dimen/layout_margin"
        android:textColor="@color/gray_870"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="현재 버전" />

    <TextView
        android:id="@+id/item_value"
        style="@style/Body21420Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/gray_870"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2.0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin"
        android:contentDescription="@string/a_update"
        android:enabled="false"
        android:minWidth="74dp"
        android:minHeight="24dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/noto_sans_kr"
        android:includeFontPadding="false"
        android:text="@string/a_update"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/state_enable_gray_25"
        app:backgroundTint="@color/state_enable_gray_200"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/item_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_value" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/bg_light_gray_50"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>