<?xml version="1.0" encoding="utf-8"?>

<!-- Top Area -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_topbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="14dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivTopbarBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="18dp"
        android:src="@drawable/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_topbar_title"
        style="@style/Title41824Medium"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="@string/p_setting_profile"
        android:textColor="@color/state_active_gray_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivTopbarBack"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
