<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.common.custombottomsheet.CustomBottomSheet"
    android:background="@drawable/bg_border_top_radius_24_c_gray25"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingHorizontal="32dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/ivTopDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/icon_bottom_sheet_top"
            />
        <TextView
            android:id="@+id/tvSheetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title51622RobotoMedium"
            app:layout_constraintTop_toBottomOf="@id/ivTopDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:textColor="@color/state_enable_gray_900"
            android:visibility="visible"
            android:text="@string/a_language_filter"
            />
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Caption11218Regular"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tvSheetTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            android:visibility="gone"
            android:text=""
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            app:layout_goneMarginTop="6dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>