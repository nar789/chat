<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_25"
    tools:context=".ui.community.board.CommunityBoardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/communityBoardAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/state_active_gray_25"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/communityBoardToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/icon_arrow_head_left"
                app:contentInsetStartWithNavigation="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                app:title="게시판 이름"
                app:titleTextAppearance="@style/Title41824Medium"
                tools:ignore="RtlSymmetry"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_500_opacity12"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/communityBoardAppBar"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcBoardPostList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_light_gray_50"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <include
            android:id="@+id/layoutNoListView"
            layout="@layout/no_post_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/communityBoardAppBar"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBoardPostEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:maxImageSize="96dp"
            android:src="@drawable/btn_post_t"
            app:tint="@null"
            app:elevation="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="92dp"
            />

        <ImageButton
            android:id="@+id/btnScrollUp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:background="@null"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_top_go2"
            />

        <com.rndeep.fns_fantoo.ui.common.viewgroup.FantooLoadingView
            android:id="@+id/fantooLoadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</FrameLayout>