<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.Chip
        android:id="@+id/hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Body21420Regular"
        android:textColor="@color/gray_850"
        app:chipBackgroundColor="@color/gray_50"
        app:chipCornerRadius="20dp"
        app:chipIcon="@drawable/icon_outline_hashtag"
        app:chipIconEnabled="true"
        app:chipIconSize="14dp"
        app:chipIconTint="@color/gray_850"
        app:chipMinHeight="32dp"
        app:chipMinTouchTargetSize="40dp"
        app:chipStartPadding="10dp"
        app:chipStrokeColor="@color/gray_100"
        app:chipStrokeWidth="1dp"
        app:closeIcon="@drawable/icon_outline_cancel"
        app:closeIconEnabled="true"
        app:closeIconSize="12dp"
        app:closeIconTint="@color/gray_400"
        app:closeIconEndPadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textEndPadding="8dp"
        app:textStartPadding="1dp"
        tools:text="방탄소년단" />
</androidx.constraintlayout.widget.ConstraintLayout>