<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_25">

    <com.rndeep.fns_fantoo.ui.common.viewgroup.CommonTopbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="@string/k_club_info_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topbar">
        <!-- 클럽 프로필 설정-->
        <RelativeLayout
            android:id="@+id/rlClubProfileSet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/k_club_profile_settings"
                android:textColor="@color/gray_900" />

            <ImageView
                style="@style/clubSettingListItemArrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                app:tint="@color/state_enable_gray_900" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 클럽 공개 설정-->
        <RelativeLayout
            android:id="@+id/rlClubVisibilitySet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/k_club_visibility_settings"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubVisibility"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 클럽카테고리 설정 -->
        <RelativeLayout
            android:id="@+id/rlClubCategorySet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/k_club_category_settings"
                android:textColor="@color/gray_900" />

            <ImageView
                style="@style/clubSettingListItemArrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                app:tint="@color/state_enable_gray_900" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 가입 승인 방식-->
        <RelativeLayout
            android:id="@+id/rlClubJoinMethod"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/g_join_accept_method"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubJoinMethod"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 멤버 목록 공개-->
        <RelativeLayout
            android:id="@+id/rlClubMemberVisibility"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/m_member_list_revealed"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubMemberVisibility"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 멤버수 공개-->
        <RelativeLayout
            android:id="@+id/rlClubMemberCountVisibility"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/m_member_count_revealed"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubMemberCountVisibility"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 클럽 검색어 설정 -->
        <RelativeLayout
            android:id="@+id/rlClubSearchWord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/k_club_search_keyword_settings"
                android:textColor="@color/gray_900" />

            <ImageView
                style="@style/clubSettingListItemArrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                app:tint="@color/state_enable_gray_900" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 주 언어 설정-->
        <RelativeLayout
            android:id="@+id/rlClubMainLang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/j_main_language_settings"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubMainLang"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />

        <!-- 주 활동국가 설정-->
        <RelativeLayout
            android:id="@+id/rlClubMyCountry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/club_setting_list_item_height"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/j_main_activity_contry_settings"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/tvClubMyCountry"
                style="@style/Body21420Regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="@color/gray_500" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400_opacity12" />
    </LinearLayout>

    <com.rndeep.fns_fantoo.ui.common.viewgroup.FantooLoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
