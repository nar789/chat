<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/ivIconBaby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/character_main2" />

    <TextView
        android:id="@+id/tvLoginRecommend"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIconBaby"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/se_r_do_login_save_your_history" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tvLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Buttons1420Medium"
        android:includeFontPadding="false"
        android:layout_below="@+id/tvLoginRecommend"
        android:layout_centerHorizontal="true"
        android:paddingVertical="8dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:backgroundTint="@color/state_active_primary_default"
        app:cornerRadius="50dp"
        android:paddingHorizontal="35dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/gray_25"
        android:text="@string/r_login" />

</RelativeLayout>