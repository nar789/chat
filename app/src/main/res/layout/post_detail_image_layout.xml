<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:adjustViewBounds="true"
        android:background="@color/gray_900"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
        android:id="@+id/videoFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:minHeight="268dp"
            android:maxHeight="268dp"
            android:background="@color/black"
            app:controller_layout_id="@layout/exo_playback_control_view"
            />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/proLoading"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="100dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLinkContainer"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivlinkImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/llLinkContainer"
            />
        <LinearLayout
            android:id="@+id/llLinkContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/ivlinkImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/gray_25"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            >
             <TextView
                 android:id="@+id/tvLinkUrl"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/Title51622Medium"
                 android:textColor="@color/gray_800"
                 android:textSize="16dp"
                 android:text="링크 출처"
                 />
            <TextView
                android:id="@+id/tvLinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Body21420Regular"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:text="제목은 최대 2줄 \n 제목읜 최대 2줄 \n 2줄  "
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>