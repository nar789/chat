<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_25"
    tools:context=".ui.common.profile.ProfileDetailFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profileDetailAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profileDetailToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_25"
            app:navigationIcon="@drawable/icon_outline_back"
            app:menu="@menu/profile_detail_menu"
            android:paddingRight="14dp"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="108dp"
        android:layout_height="108dp"
        app:layout_constraintTop_toBottomOf="@id/profileDetailAppbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/profile_character_xl"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:id="@+id/tvProfileNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Title51622Medium"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NickName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>