<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="14dp"
    android:paddingHorizontal="@dimen/layout_margin">

    <TextView
        android:id="@+id/item_menu_title"
        style="@style/Body21420Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/state_enable_gray_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="관심사" />

    <TextView
        android:id="@+id/item_value"
        style="@style/Body21420Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_menu_more_ic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="KPOP" />

    <ImageView
        android:id="@+id/item_menu_more_ic"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_outline_go"
        app:layout_constraintBottom_toBottomOf="@id/item_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_value"
        app:tint="@color/state_enable_gray_400" />
</androidx.constraintlayout.widget.ConstraintLayout>