<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_25"
            android:elevation="2dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            app:contentInsetStartWithNavigation="0dp"
            app:maxButtonHeight="50dp"
            app:navigationIcon="@drawable/icon_outline_back"
            app:titleTextAppearance="@style/Title41824Medium" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/ivCharacter2"
        android:layout_width="118dp"
        android:layout_height="124dp"
        android:layout_marginTop="182dp"
        android:src="@drawable/character_main2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvErrorTitle"
        style="@style/Body21420Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/p_service_error"
        android:textColor="@color/gray_850"
        app:layout_constraintTop_toBottomOf="@id/ivCharacter2" />

    <TextView
        android:id="@+id/tvErrorGuide"
        style="@style/Body21420Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:text="@string/se_wrong_access_retry"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toBottomOf="@id/tvErrorTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnErrorPrevious"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvErrorGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/a_previous_page"
        android:textColor="@color/gray_25"
        android:background="@drawable/bg_border_radius_100_btnactivie"
        />

</androidx.constraintlayout.widget.ConstraintLayout>